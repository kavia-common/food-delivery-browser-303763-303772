<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.FoodDelivery.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_md">

        <ImageView
            android:id="@+id/vegIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_veg"
            android:contentDescription=""
            android:importantForAccessibility="no"
            app:tint="@color/app_success" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menuItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FoodDelivery.Subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menuItemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall" />

            <TextView
                android:id="@+id/menuItemCustomizableHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

            <TextView
                android:id="@+id/menuItemRatingMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

            <TextView
                android:id="@+id/menuItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:textAppearance="@style/TextAppearance.FoodDelivery.Body"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/menuItemImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="@dimen/space_sm"
            android:contentDescription="@string/menu_item_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_food" />

        <ImageView
            android:id="@+id/favoriteToggle"
            android:layout_width="@dimen/a11y_min_touch_target"
            android:layout_height="@dimen/a11y_min_touch_target"
            android:layout_marginEnd="@dimen/space_sm"
            android:padding="12dp"
            android:src="@drawable/ic_heart_outline"
            android:contentDescription="@string/favorite"
            app:tint="?attr/colorError" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addButton"
            style="@style/Widget.FoodDelivery.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/a11y_min_touch_target"
            android:minHeight="@dimen/a11y_min_touch_target"
            android:text="@string/add"
            android:contentDescription="@string/add_to_cart" />

        <LinearLayout
            android:id="@+id/qtyContainer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/a11y_min_touch_target"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:focusable="false"
            android:importantForAccessibility="no">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minusButton"
                style="@style/Widget.FoodDelivery.Button.IconSmall"
                android:text="@string/minus"
                android:contentDescription="@string/decrease_quantity" />

            <TextView
                android:id="@+id/qtyText"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.FoodDelivery.Body"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plusButton"
                style="@style/Widget.FoodDelivery.Button.IconSmall"
                android:text="@string/plus"
                android:contentDescription="@string/increase_quantity" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
