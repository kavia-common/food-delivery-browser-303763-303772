<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_lg"
    android:background="?android:attr/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delivery_tracking_title"
        android:textAppearance="@style/TextAppearance.FoodDelivery.Title" />

    <LinearLayout
        android:id="@+id/deliveryEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xl"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_delivery"
            android:contentDescription=""
            android:importantForAccessibility="no"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:text="@string/delivery_empty_title"
            android:textAppearance="@style/TextAppearance.FoodDelivery.Subtitle"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:text="@string/delivery_empty_subtitle"
            android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deliveryContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:orientation="vertical"
            android:background="?attr/colorSurface"
            android:padding="@dimen/space_md">

            <!-- Header row: ring + text stack -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="@dimen/space_md"
                    android:contentDescription="@string/delivery_tracking_title"
                    android:importantForAccessibility="no">

                    <ProgressBar
                        android:id="@+id/deliveryHeaderRing"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="10"
                        android:progressDrawable="@drawable/delivery_progress_ring" />

                    <TextView
                        android:id="@+id/deliveryHeaderRingPercent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                        android:textStyle="bold"
                        android:text="10%"
                        android:importantForAccessibility="no"
                        android:accessibilityLiveRegion="polite" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deliveryHeaderTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.FoodDelivery.Subtitle"
                        android:textStyle="bold"
                        android:text="@string/delivery_tracking_title" />

                    <TextView
                        android:id="@+id/deliveryHeaderSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:text="@string/delivery_tracking_subtitle_placeholder" />

                    <TextView
                        android:id="@+id/deliveryOrderInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/deliveryHeaderEta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                        android:textStyle="bold"
                        android:text="@string/delivery_eta_in_placeholder"
                        android:accessibilityLiveRegion="polite" />
                </LinearLayout>
            </LinearLayout>

            <!-- Keep the existing horizontal progress bar for clarity + continuity -->
            <ProgressBar
                android:id="@+id/deliveryHeaderProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/space_sm"
                android:indeterminate="false"
                android:max="100"
                android:progress="10" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelOrderButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/a11y_min_touch_target"
                android:minHeight="@dimen/a11y_min_touch_target"
                android:layout_marginTop="@dimen/space_sm"
                android:text="@string/delivery_cancel_order"
                android:textAllCaps="false"
                android:textColor="?attr/colorError"
                android:contentDescription="@string/delivery_cancel_order" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deliveryTimelineRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/space_md" />
    </LinearLayout>

</LinearLayout>
