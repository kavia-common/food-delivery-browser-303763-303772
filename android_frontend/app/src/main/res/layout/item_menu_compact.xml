<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.FoodDelivery.Card"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_md"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/menu_item_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_food" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.FoodDelivery.Subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
