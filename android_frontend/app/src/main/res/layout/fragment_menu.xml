<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_lg"
    android:background="?android:attr/colorBackground">

    <TextView
        android:id="@+id/menuRestaurantTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.FoodDelivery.Title" />

    <TextView
        android:id="@+id/menuRestaurantMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xs"
        android:textAppearance="@style/TextAppearance.FoodDelivery.BodySmall" />

    <include
        android:id="@+id/ratingsSection"
        layout="@layout/view_ratings_section" />

    <LinearLayout
        android:id="@+id/menuRecommendationsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_md"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/menuRecommendationsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_might_also_like"
            android:textAppearance="@style/TextAppearance.FoodDelivery.Subtitle"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecommendationsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="@dimen/space_sm"
            android:overScrollMode="never" />
    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoryChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_md"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:chipSpacing="@dimen/space_sm" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_md"
        android:layout_weight="1" />

</LinearLayout>
